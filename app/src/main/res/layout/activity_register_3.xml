<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonVolverContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="VOLVER"
            android:textColor="@color/principal_blue"
            app:icon="@drawable/ic_flechaatras"
            app:iconTint="@color/principal_blue"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />

        <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:src="@drawable/ic_byu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/Registro"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textEmailAddress"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:focusableInTouchMode="true"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/principal_blue"
            app:hintTextColor="@color/principal_blue"
            app:startIconDrawable="@drawable/ic_email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonSiguienteContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/principal_blue"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:text="@string/botonSiguiente"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>