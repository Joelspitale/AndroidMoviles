<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/idImagen"
        android:layout_width="110dp"
        android:layout_height="103dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_museo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/idExhibitsTitle"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textAlignment="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/lightblue"
            android:textSize="20sp"
            tools:text="@string/tituloPorDefecto" />

        <TextView
            android:id="@+id/idExhibitsIntroduction"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:textAlignment="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/idImagen"
            app:layout_constraintTop_toBottomOf="@id/idExhibitsTitle"
            tools:text="@string/introPorDefecto" />

        <TextView
            android:id="@+id/idExhibitsContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:textSize="11dp"
            tools:text="@string/contenidoPorDefecto"/>
    </LinearLayout>

</LinearLayout>