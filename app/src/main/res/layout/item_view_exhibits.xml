<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/profile_circle_view"
        android:layout_width="110dp"
        android:layout_height="103dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_museo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_exhibits_title"
        android:layout_width="139dp"
        android:layout_height="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/lightblue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/profile_circle_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tituloPorDefecto" />

    <TextView
        android:id="@+id/text_view_exhibits_introduction"
        android:layout_width="254dp"
        android:layout_height="17dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/profile_circle_view"
        app:layout_constraintTop_toBottomOf="@id/text_view_exhibits_title"
        tools:text="@string/introPorDefecto" />

    <TextView
        android:id="@+id/text_view_exhibits_content"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@id/profile_circle_view"
        app:layout_constraintTop_toBottomOf="@id/text_view_exhibits_introduction"
        tools:text="@string/contenidoPorDefecto"/>

</androidx.constraintlayout.widget.ConstraintLayout>